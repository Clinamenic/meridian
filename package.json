{
  "name": "meridian",
  "version": "0.1.0",
  "description": "Local-first multi-tool interface for knowledge management and social coordination",
  "main": "dist/main/main.js",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "build:bundle": "esbuild src/main/main.ts --bundle --platform=node --outfile=dist/main/main.js --external:electron",
    "start": "npm run build && electron .",
    "dev": "concurrently \"npm run build:watch\" \"wait-on dist/main/main.js && NODE_ENV=development electron .\"",
    "package": "npm run build && electron-builder",
    "package:prod": "npm run build && npm prune --production && electron-builder && npm install",
    "package:ultra": "npm run build:bundle && npm prune --production && electron-builder && npm install",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix"
  },
  "keywords": [
    "electron",
    "productivity",
    "local-first",
    "knowledge-management"
  ],
  "author": "Meridian",
  "license": "MIT",
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.0",
    "@types/three": "^0.177.0",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "concurrently": "^8.2.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.6.0",
    "esbuild": "^0.19.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "typescript": "^5.3.0",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "@atproto/api": "^0.12.0",
    "arkb": "^1.1.61",
    "cheerio": "^1.0.0-rc.12",
    "js-yaml": "^4.1.0",
    "three": "^0.177.0",
    "twitter-api-v2": "^1.23.2",
    "uuid": "^9.0.1"
  },
  "build": {
    "appId": "com.meridian.app",
    "productName": "Meridian",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "src/renderer/**/*",
      "package.json",
      "!node_modules/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [],
    "compression": "maximum",
    "asar": true,
    "asarUnpack": [],
    "mac": {
      "category": "public.app-category.productivity",
      "target": "dmg",
      "compression": "maximum",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "win": {
      "target": "nsis",
      "compression": "maximum"
    },
    "linux": {
      "target": "AppImage",
      "compression": "maximum"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "afterSign": "scripts/notarize.js"
  }
}
